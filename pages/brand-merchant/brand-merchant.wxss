page{
  padding-bottom: 100rpx;
}
.min-height{
  
  margin-top:400rpx !important;
}
.fixation{
  position: fixed;
  
  left: 0;
  width: 100%;
  z-index: 100;
}
.brand-top{
  width: 100%;
  height: 260rpx;
  background-image: linear-gradient(-45deg,rgb(6, 114, 216),rgb(88, 165, 236));
  overflow: hidden;
  text-align: center;
  color:#fff;
  padding:20rpx 0;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  
}
.logo-view{
  width: 100%;
  height: 150rpx;

}
.logo-radius{
  width: 150rpx;
  height: 150rpx;
  margin: auto;

  border-radius: 50%;
  overflow: hidden;
  border:1px solid #fff;

}
.logo-radius > image{
  width: 100%;
  height: 100%;
}
.base{
  margin-top:15rpx;
  text-align: left;
  font-size: 32rpx;
  padding:0 15rpx 15rpx;
}
.item-img{
  width: 100%;
  height: 380rpx;
}
.brand-name{
  width: 100%;
  font-size: 32rpx;
  font-weight: 600;
  text-shadow:1px 1px 1px #000;
}
.brand-brief{
  padding:35rpx;
  margin: 15rpx;
  font-size: 28rpx;
  line-height: 52rpx;
}
.button-list{
  height:90rpx;
  /* margin:10rpx 10rpx 0; */
  display: flex;
  justify-content: center;
  /* border-radius: 10rpx; */
  overflow: hidden;
  background: #fff;
  box-shadow: 0px 1px 4px rgba(107, 138, 221, 0.3), 0px 0px 5px rgba(152, 186, 236, 0.1) inset;
}
.classify{
  margin:20rpx 10rpx;
  padding-top:1rpx;
}


.classify-item{
  /* line-height: 100rpx; */
  
  background: #fff;
  font-size: 32rpx;
  margin-top:2px;
  border-radius: 10rpx;
  text-indent: 20rpx;
  overflow: hidden;
   position: relative;
   padding:30rpx 0;
}
.item-son{
  
  color:#888;
  font-size: 28rpx;
  background: #fff;
  overflow: hidden;
  overflow-y:scroll;
  
  transition: all .3s linear;
  /* padding:10rpx 0; */

}
.son{
  position: relative;
  line-height: 70rpx;
   text-indent: 35rpx;
}
.son-img{
  position: absolute;
  right: 30rpx;
  top:50%;
  transform: translateY(-50%);
  margin: auto;
  width: 30rpx;
  height: 30rpx;
}
.sun{
  position: relative;
  /* padding:20rpx 0; */
  text-indent: 45rpx;
  overflow: hidden;
  transition: all .3s linear;
}
.sun-img{
  position: absolute;
  right: 30rpx;
  top:50%;
  transform: translateY(-50%);
  margin: auto;
  width: 30rpx;
  height: 30rpx;
}
.classify-img{
  position: absolute;
  right: 20rpx;
  top:50%;
  transform: translateY(-50%);
  margin: auto;
  width: 40rpx;
  height: 40rpx;
}

.botton-nav{
  margin: 0rpx 18rpx;
  /* flex:1; */
  line-height:90rpx;
  text-align: center;
  font-size: 30rpx;
}
.nav-name{
  position: relative;
}
.color{
  color:#d43c33;
  
}
.color::after{
  position: absolute;
  content: "";
  bottom: -5rpx;
  left:-1rpx;
  width: 100%;
  transition: all 0.5 linear;
  border:1px #d43c33 solid;
  
}
