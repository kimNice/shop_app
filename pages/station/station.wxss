/* 返回 */

.back{
  position: fixed;
  top:570rpx;
  /* left: 35rpx; */
  right: 15rpx;
  font-size: 32rpx;
  text-indent: 10rpx;
  padding: 10rpx;
  background: rgba(0, 0, 0, .7);
  color:#fff;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  box-shadow: 0px 1px 4px rgba(107, 138, 221, 0.3), 0px 0px 5px rgba(152, 186, 236, 0.1) inset;
