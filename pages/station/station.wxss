page{
  padding-bottom: 100rpx;
}
.fiexd{
  position: fixed;
  left:0;
  width: 100%;

  z-index: 10;
}
.merchant-top{
  position: relative;
  width: 100%;
  height: 260rpx;
  
  background: rgba(255, 255, 255, .8);
  
}
.mask{
  position: absolute;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: linear-gradient(-45deg,rgb(6, 114, 216),rgb(88, 165, 236));

  /* filter: blur(10px); */

}
.padding{
  padding: 0 20rpx;
}
.content-layout{
  position: absolute;
  z-index: 10;
  bottom: 34%;
  /* display: flex; */
  width: 96%;
  height: 150rpx;
  /* align-items: center; */
  padding: 0 15rpx;
  color: #fff;
}
.shop-logo{
  /* flex: .6; */
  width: 100%;
  height: 150rpx;
}
.shop-logo image{
  width: 150rpx;
  height: 150rpx;
  display: block;
  margin: auto;
  border-radius: 50%;
  border:1px solid #fff;

}
.shop-info{
  /* flex: 2.3; */
  /* margin-left:10rpx; */
  width: 100%;
  text-align: center;
  margin-top:20rpx;
  font-size: 32rpx;
}
.r-p{
  position: relative;
}
.bage{
  position: absolute;
  top:1rpx;
  right: -90rpx;
  padding:5rpx;
  background: #d43c33;
  color:#fff;
  font-size: 20rpx;
  border-radius: 10rpx;
}
.collect-shop{
  /* flex: 1; */
  width: 200rpx;
  margin-left:auto;
  margin-right: 0;
  
}
.collect-bt{
  /* width: 100%; */
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 40rpx;
  /* background: #d43c33; */
  border:1px solid #fff;
}
.collect-bt .bt-img{
  width: 35rpx;
  height: 35rpx;
  padding-right: 10rpx;
}
/* 头导航 */
.nav_list{
  display: flex;
  justify-content: center;
  width: 100%;
  height: 90rpx;
  overflow: hidden;
  font-size: 30rpx;
  background: #fff;
  box-shadow: 0px 1px 4px rgba(107, 138, 221, 0.3), 0px 0px 5px rgba(152, 186, 236, 0.1) inset;

}
.nav_item{
  flex: 1;
  line-height: 90rpx;
  text-align: center;
}
.nav_text{
  position: relative;
}
.color{
  color:#d43c33;
  
}
.color::after{
  position: absolute;
  content: "";
  bottom: -5rpx;
  left:-1rpx;
  width: 100%;
  transition: all 0.5 linear;
  border:1px #d43c33 solid;
  
}

.shop_address{
  position: relative;
  display: flex;
  align-items: center;
  margin: 0 15rpx;
  background: #fff;
  padding:40rpx;
  box-shadow: 0px 1px 4px rgba(107, 138, 221, 0.3), 0px 0px 5px rgba(152, 186, 236, 0.1) inset;
}

.shop_address image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.product_list{
  margin-top:10rpx;
  margin-left:10rpx;
  margin-right: 10rpx;
  /* background: #fff; */
}
.p_list{
  width: calc(50% - 12rpx);
  float: left;
  padding-bottom: 10rpx;
  margin: 5rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0px 1px 4px rgba(107, 138, 221, 0.3), 0px 0px 5px rgba(152, 186, 236, 0.1) inset;
  background: #fff;
  margin-top:15rpx;
}
.no-data{
  position: relative;
  padding:20rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
}
.line{
  position: absolute;
  left:50%;
  transform: translateX(-50%);
  background: #888;
  width: 50%;
  height: 3rpx;
}
.line-text{
  position: absolute;
  left:50%;
  transform: translateX(-50%);
  background: #f5f5f5;
  padding:0 8rpx;
  color:#888;
  text-align: center;
}
.item-title{
  font-size: 32rpx;
  line-height: 52rpx;
}
.item-img{
  width: 100%;
  height: 380rpx;
}
.list-view{
  /* display: flow-root; */
  clear:both;
  overflow: hidden;
}
.not{
  margin-top:30%;
  text-align: center;
  color:#888;
}
.not-img{
  width: 180rpx;
  height: 130rpx;
  margin: auto;
}
/* 底部导航 */
.bottom_nav{
  position: fixed;
  left: 10%;
  bottom: 20rpx;
  width: 80%;
  display: flex;
  justify-content: center;
  border-radius: 40rpx;
  color:#fff;
}
.nav-item{
  flex:1;
  padding:10rpx;
  font-size: 26rpx;
  text-align: center;
}
.nav-item image{
  display: block;
  width: 40rpx;
  height: 40rpx;
  margin: auto;
}
.brief{
  padding: 35rpx;
  /* margin: 15rpx; */
  font-size: 28rpx;
  line-height: 52rpx;

}

