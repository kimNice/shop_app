 }
.floor-list {
  overflow: hidden;
  position: relative;
  margin-top:5rpx;
}
.floor-list .word {
  padding: 30rpx 20rpx 0 20rpx;
}
.floor-list .word .vice-name {
  color: #fff;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  text-align: center;
  padding: 30rpx;
}
.floor-list .word .word-icon {
  margin: 10rpx;
  width: calc(33% - 24rpx);
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.03);
  border-radius: 6rpx;
  display: inline-block;
  border: 1px solid #fff;
  text-decoration: none;
  overflow: hidden;
}
.floor-list .word image {
  max-width: 100%;
  margin: 0 auto;
}
